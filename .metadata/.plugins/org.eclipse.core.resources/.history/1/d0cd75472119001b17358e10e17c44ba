package day3;

import java.util.Scanner;

public class array_exam {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		// 문제1 : 크기가 5인 int 배열을 선언,
		// 요소 입력(자연수 범위), 짝수의 개수 출력
		
		int [] arr = new int[5];
		for (int i=0; i<5; i++) {
			arr[i] = sc.nextInt();
		}
		int count = 0; //개수를 카운팅할 변수 선언
		for (int v : arr ) {
			if (v%2 == 0 ) { //짝수일 경우 
				count++; // 카운트 1씩 증가
			}
		}

	}

}
